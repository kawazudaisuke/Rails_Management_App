<h2>予定一覧</h2>

<% if flash.notice %>
    <p class="notice"><%= flash.notice %></p>
<% end %>

<table> 
    <thead>
        <tr>
            <th>id</th>
            <th>予定</th>
            <th>開始日</th>
            <th>終了日</th>
            <th>終日</th>
            <th>スケジュール更新日時</th>
            <th>詳細</th>
            <th>編集</th>
            <th>削除</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.content %></td>
                <td><%= user.start.strftime("%Y年%-m月%-d日")%></td>
                <td><%= user.end.strftime("%Y年%-m月%-d日") %></td>
                <% if user.allday%>
                  <td>○</td>
                <% else %>
                  <td></td>
                <% end %>
                
                <td><%= user.updated_at.to_s(:datetime_jp) %></td>
                <td>
                    <%= link_to "詳細" , user %>
                </td>
                <td><%= link_to "編集" , [:edit, user] %></td>
                <td><%= link_to "削除", user, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<p><%= link_to "予定新規登録", :new_user %></p>

<%= render "shared/partial1" %>